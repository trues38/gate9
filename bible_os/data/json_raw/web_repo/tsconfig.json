{
	"include": ["./*.ts"],
	"exclude": ["node_modules/**"],
	"compilerOptions": {
		"module": "nodenext",
		"target": "esnext",
		"lib": ["esnext", "dom"],
		"types": ["node"],
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"noUncheckedIndexedAccess": true,
		"exactOptionalPropertyTypes": true,
		"strict": true,
		"isolatedModules": true,
		"noUncheckedSideEffectImports": true,
		"moduleDetection": "force",
		"skipLibCheck": true,
		"allowImportingTsExtensions": true,
		"noEmit": true
	}
}
